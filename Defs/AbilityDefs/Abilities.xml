    <groupDef>Moralist</groupDef>
    <overrideGroupCooldown>True</overrideGroupCooldown>
    <cooldownTicksRange>480000</cooldownTicksRange>
    <targetRequired>True</targetRequired>
    <gizmoClass>Command_Ability</gizmoClass>
